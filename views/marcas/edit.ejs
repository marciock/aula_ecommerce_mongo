<%- contentFor('body') %>
<div class="container" style="margin-top: 5em;">
    <h3>Administrador / Marcas / Editar Marca</h3>
    <div class="row">
   
        <form  method="POST" action="/update_marca" class="col-lg-10">
          <% for(d of data) { %>
            <div class="form-group">
                <label for="marca">Marca</label>
                <input type="text" name="marca" id="marca" class="form-control" value="<%- d.marca %>">                   
            </div>
            <div class="form-group">
                
                <input type="hidden" name="id" id="id" class="form-control" value="<%- d._id %>">                   
            </div>
           
    
       <% } %>
            <div class="form-group">
                <button type="button" id="cancelar" class="btn btn-raised btn-danger">Cancelar</button>
                <button type="submit" class="btn btn-raised btn-success">Salvar</button>
                
            </div>
            
        </form>
   
    </div>
</div>