<%- contentFor('body') %>
<div class="container" style="margin-top: 5em;">
    <h3><a href="/produtos">Produtos</a> / Adicionar Novo Produto</h3>
    <div class="row">
        <form  method="POST" action="/save_produto" class="col-lg-10">
           
            <div class="form-group">
                <label for="marca">Produto</label>
                <input type="text" name="produto" id="produto" class="form-control">                   
            </div>
            <div class="form-group">
                <label for="marca">Marca</label>
                <select name="marca" id="marca" class="form-control"> 
                    <option value="0">Marcas</option>
                </select>

            </div>
            <div class="form-group">
                <label for="marca">Descrição</label>
                 <textarea name="descricao" id="descricao" class="form-control" rows="3"></textarea>                
            </div>
            <div class="form-group">
                <label for="preco">Preço</label>
                 <input type="number" name="preco" id="preco" class="form-control" step="any">                   
            </div>
                    
            
       
            <div class="form-group">
                <button type="button" id="cancelar" class="btn btn-raised btn-danger">Cancelar</button>
                <button type="submit" class="btn btn-raised btn-success">Salvar</button>
                
            </div>
        </form>
    </div>
</div>
<script>

    const marca=document.getElementById('marca');

        fetch('/select_marca',{
            method:'GET',
            headers:{
                'Content-Type':'text/plain;charset=UTF-8'
            }
        }).then(response=>{
            return response.json();
        }).then(data=>{
            data.map((f)=>{
                let option=`<option value="${f._id}">${f.marca}</option>`;
                marca.innerHTML +=option;
            })
        })

</script>